<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.tripApp.board.travelPlan.mapper.TravelPlanMapper">

	<resultMap type="localDto" id="local">
		<result column="title" property="title"/>
		<result column="content_id" property="contentId"/>
		<result column="addr1" property="address"/>
		<result column="first_image" property="image"/>
	</resultMap>
	<resultMap type="travelplanDto" id="travelplan">
		<result column="content_id" property="contentId"/>
		<result column="start_date" property="startDate"/>
		<result column="end_date" property="endDate"/>
		<result column="subject" property="subject"/>
		<result column="user_id" property="userId"/>
		<result column="register_time" property="registerTime"/>
		<result column="star_count" property="starCount"/>
	</resultMap>
	

	<select id="areaList" parameterType="string" resultMap="local">
		select title,content_id, addr1, first_image
		from attraction_info
		where title
		like concat('%',#{word},'%')
	</select>
	<insert id="writePlan" parameterType="travelPlanDto">
		insert into travelplan (content_id, start_date, end_date, subject,user_id, register_time,star_count)
		values (#{contentId}, #{startDate}, #{endDate},#{subject} ,#{userId}, now(),#{starCount})

	</insert>
	
	<select id="listPlan" resultMap="travelplan">
		select content_id, start_date, end_date, subject,user_id, register_time,star_count
		from travelplan
		order by articleNo desc
	</select>
	
	
	<select id="viewPlan" parameterType="int" resultMap="travelplan">
		select content_id, start_date, end_date, subject,user_id, register_time,star_count
		from travelplan
		where articleNo = #{articleNo}
	</select>
	
	
